generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Account {
  id                String  @id @default(cuid())
  userId            Int
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       Int
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            Int            @id @default(autoincrement())
  name          String?
  email         String?        @unique
  emailVerified DateTime?
  image         String?
  splash        Boolean        @default(false)
  accounts      Account[]
  puzzle        Puzzle[]
  sessions      Session[]
  UserSolution  UserSolution[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Input {
  id           String         @id @default(cuid())
  input        String
  answerPart1  String
  answerPart2  String
  puzzleId     String
  puzzle       Puzzle         @relation(fields: [puzzleId], references: [id])
  UserSolution UserSolution[]
}

model UserSolution {
  id                        Int       @id @unique @default(autoincrement())
  userId                    Int
  timeOpened                DateTime @default(now())
  part_1_complete           Boolean   @default(false)
  part_2_complete           Boolean   @default(false)
  part_1_time_of_completion DateTime?
  part_2_time_of_completion DateTime?
  part_1_solution           Int?
  part_2_solution           Int?
  inputId                   String
  puzzleId                  String
  input                     Input     @relation(fields: [inputId], references: [id])
  puzzle                    Puzzle    @relation(fields: [puzzleId], references: [id])
  User                      User      @relation(fields: [userId], references: [id])

  @@index([userId])
  @@unique([userId, inputId])
}

model Puzzle {
  collection        String
  puzzleNumber      Int
  part1Instructions String
  part2Instructions String
  openedCount       Int            @default(0)
  completedCount    Int            @default(0)
  createdAt         DateTime       @default(now())
  createdBy         Int?
  id                String         @id @default(cuid())
  puzzleName        String
  Input             Input[]
  Collections       Collection     @relation(fields: [collection], references: [collectionName])
  UserCreatedBy     User?          @relation(fields: [createdBy], references: [id])
  UserSolution      UserSolution[]

  @@unique([collection, puzzleNumber])
}

model Collection {
  collectionName String   @id @unique
  Puzzle         Puzzle[]
}
